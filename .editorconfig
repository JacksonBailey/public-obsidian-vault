root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md, markdown}]
trim_trailing_whitespace = true # Use tailing backslash instead
end_of_line = lf # Obsidian insists on lf

[*.{bat, cmd, ps1}]
charset = latin1
end_of_line = crlf

[*.{sh, bash}]
end_of_line = lf

[*.js]
indent_style = space
indent_size = 2
